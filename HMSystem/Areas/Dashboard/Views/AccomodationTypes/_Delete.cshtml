@model HMSystem.Areas.Dashboard.ViewModels.AccomodationTypesAddOrEditModel

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                Delete Accomodation Type
            </h5>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="actionForm">
                <input type="hidden" name="ID" value="@Model.ID" />

                <div class="alert alert-danger" role="alert">
                    Are you sure you want to delete this accomadation type!
                </div>
            </form>

        </div>
        <div class="modal-footer">
            <button id="actionButton" type="button" class="btn btn-primary"><i class="far fa-trash-alt mr-1"></i>Delete</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="far fa-window-close mr-1"></i>Close</button>
        </div>
    </div>
}

<script>
	$("#actionButton").click(function () {
		$.ajax({
			url: '@Url.Action("Delete", "AccomodationTypes")',
			type: "post",
			data: $("#actionForm").serialize()
		})
		.done(function (response) {
			debugger;
			if(response.Success)
			{
				window.location.href = "@Url.Action("Index", "AccomodationTypes")";
			}
			else {
				$(".errorDiv").html(response.Message);
			}
		});
	});
</script>

